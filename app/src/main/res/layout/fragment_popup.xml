<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_popup"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ripple_effect"
        android:onClick="onDeleteButtonClick"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <!-- Rectangle ImageView -->
    <ImageView
        android:id="@+id/rectangleImageView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/insert_text_space"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Select a city"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/rectangleImageView"
        app:layout_constraintStart_toStartOf="@id/rectangleImageView"
        app:layout_constraintEnd_toEndOf="@id/rectangleImageView"
        app:layout_constraintBottom_toBottomOf="@id/rectangleImageView"
        android:imeOptions="actionSearch"/>

    <!-- Create Trip Button -->
    <ImageView
        android:id="@+id/create_trip_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:src="@drawable/create_trip_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"
        android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>