<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Navigation Bar Image -->
        <ImageView
            android:id="@+id/nav_bar_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/grey"
            android:scaleType="fitXY" />

    </LinearLayout>

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="@id/navigation_bar"
        app:layout_constraintStart_toStartOf="@id/navigation_bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <!-- List Icon -->
    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_format_list_bulleted_24"
        app:layout_constraintTop_toTopOf="@id/navigation_bar"
        app:layout_constraintEnd_toEndOf="@id/navigation_bar"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp" />

    <!-- Text Boxes 1 -->
    <TextView
        android:id="@+id/museum_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Museum"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/attraction_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/attraction_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Atraction"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/museum_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/park_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/park_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Park"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/attraction_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/hotel_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/hotel_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Hotel"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/park_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"/>

    <!-- Text Boxes 2 -->
    <TextView
        android:id="@+id/cafe_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Cafe"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/museum_button"
        app:layout_constraintEnd_toStartOf="@id/bar_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/bar_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Bar"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/cafe_button"
        app:layout_constraintTop_toBottomOf="@id/attraction_button"
        app:layout_constraintEnd_toStartOf="@id/food_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/food_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Food"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/bar_button"
        app:layout_constraintTop_toBottomOf="@id/park_button"
        app:layout_constraintEnd_toStartOf="@id/shop_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/shop_button"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Shop"
        android:gravity="center"
        android:textColor="@color/grey"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/food_button"
        app:layout_constraintTop_toBottomOf="@id/hotel_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
